{ obj := Œª X, op (F.obj (unop X)),
  map := Œª X Y f, (F.map f.unop).op }

@[simp] lemma op_obj (F : C ‚•§ D) (X : C·µí·µñ) : (F.op).obj X = op (F.obj (unop X)) := rfl
