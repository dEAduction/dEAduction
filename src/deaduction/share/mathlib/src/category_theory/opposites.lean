protected definition unop (F : C·µí·µñ ‚•§ D·µí·µñ) : C ‚•§ D :=
{ obj := Œª X, unop (F.obj (op X)),
  map := Œª X Y f, (F.map f.op).unop }

@[simp] lemma unop_obj (F : C·µí·µñ ‚•§ D·µí·µñ) (X : C) : (F.unop).obj X = unop (F.obj (op X)) := rfl
