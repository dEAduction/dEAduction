{ left_cancellation := Œª Z g h w, begin replace w := section_ f ‚â´= w, simpa using w, end }

/-- Every split mono whose retraction is mono is an iso. -/
def is_iso.of_mono_retraction {X Y : C} {f : X ‚ü∂ Y} [split_mono f] [mono $ retraction f]
  : is_iso f :=
{ inv := retraction f,
  inv_hom_id' := (cancel_mono_id $ retraction f).mp (by simp) }

/-- Every split epi whose section is epi is an iso. -/
def is_iso.of_epi_section {X Y : C} {f : X ‚ü∂ Y} [split_epi f] [epi $ section_ f]
  : is_iso f :=
{ inv := section_ f,
  hom_inv_id' := (cancel_epi_id $ section_ f).mp (by simp) }

