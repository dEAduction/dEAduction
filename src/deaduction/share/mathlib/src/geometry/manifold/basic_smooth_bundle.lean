universe u

open topological_space set

/-- Core structure used to create a smooth bundle above `M` (a manifold over the model with
corner `I`) with fiber the normed vector space `F` over `ùïú`, which is trivial in the chart domains
of `M`. This structure registers the changes in the fibers when one changes coordinate charts in the
base. We do not require the change of coordinates of the fibers to be linear, only smooth.
Therefore, the fibers of the resulting bundle will not inherit a canonical vector space structure
in general. -/
structure basic_smooth_bundle_core {ùïú : Type*} [nondiscrete_normed_field ùïú]
{E : Type*} [normed_group E] [normed_space ùïú E]
{H : Type*} [topological_space H] (I : model_with_corners ùïú E H)
(M : Type*) [topological_space M] [charted_space H M] [smooth_manifold_with_corners I M]
(F : Type*) [normed_group F] [normed_space ùïú F] :=
(coord_change      : atlas H M ‚Üí atlas H M ‚Üí H ‚Üí F ‚Üí F)
(coord_change_self :
  ‚àÄ i : atlas H M, ‚àÄ x ‚àà i.1.target, ‚àÄ v, coord_change i i x v = v)
(coord_change_comp : ‚àÄ i j k : atlas H M,
  ‚àÄ x ‚àà ((i.1.symm.trans j.1).trans (j.1.symm.trans k.1)).source, ‚àÄ v,
  (coord_change j k ((i.1.symm.trans j.1) x)) (coord_change i j x v) = coord_change i k x v)
(coord_change_smooth : ‚àÄ i j : atlas H M,
  times_cont_diff_on ùïú ‚ä§ (Œªp : E √ó F, coord_change i j (I.symm p.1) p.2)
  ((I '' (i.1.symm.trans j.1).source).prod (univ : set F)))


/-- The trivial basic smooth bundle core, in which all the changes of coordinates are the
identity. -/
def trivial_basic_smooth_bundle_core {ùïú : Type*} [nondiscrete_normed_field ùïú]
{E : Type*} [normed_group E] [normed_space ùïú E]
{H : Type*} [topological_space H] (I : model_with_corners ùïú E H)
(M : Type*) [topological_space M] [charted_space H M] [smooth_manifold_with_corners I M]
(F : Type*) [normed_group F] [normed_space ùïú F] : basic_smooth_bundle_core I M F :=
{ coord_change := Œª i j x v, v,
  coord_change_self := Œª i x hx v, rfl,
  coord_change_comp := Œª i j k x hx v, rfl,
  coord_change_smooth := Œª i j, times_cont_diff_snd.times_cont_diff_on }

namespace basic_smooth_bundle_core

variables {ùïú : Type*} [nondiscrete_normed_field ùïú]
{E : Type*} [normed_group E] [normed_space ùïú E]
{H : Type*} [topological_space H] {I : model_with_corners ùïú E H}
{M : Type*} [topological_space M] [charted_space H M] [smooth_manifold_with_corners I M]
{F : Type*} [normed_group F] [normed_space ùïú F]
(Z : basic_smooth_bundle_core I M F)

instance : inhabited (basic_smooth_bundle_core I M F) :=
‚ü®trivial_basic_smooth_bundle_core I M F‚ü©

/-- Fiber bundle core associated to a basic smooth bundle core -/
def to_topological_fiber_bundle_core : topological_fiber_bundle_core (atlas H M) M F :=
{ base_set := Œªi, i.1.source,
  is_open_base_set := Œªi, i.1.open_source,
  index_at := Œªx, ‚ü®chart_at H x, chart_mem_atlas H x‚ü©,
  mem_base_set_at := Œªx, mem_chart_source H x,
  coord_change := Œªi j x v, Z.coord_change i j (i.1 x) v,
  coord_change_self := Œªi x hx v, Z.coord_change_self i (i.1 x) (i.1.map_source hx) v,
  coord_change_comp := Œªi j k x ‚ü®‚ü®hx1, hx2‚ü©, hx3‚ü© v, begin
    have := Z.coord_change_comp i j k (i.1 x) _ v,
    convert this using 2,
    { simp only [hx1] with mfld_simps },
    { simp only [hx1, hx2, hx3] with mfld_simps }
  end,
  coord_change_continuous := Œªi j, begin
    have A : continuous_on (Œªp : E √ó F, Z.coord_change i j (I.symm p.1) p.2)
      ((I '' (i.1.symm.trans j.1).source).prod (univ : set F)) :=
      (Z.coord_change_smooth i j).continuous_on,
    have B : continuous_on (Œªx : M, I (i.1 x)) i.1.source :=
      I.continuous.comp_continuous_on i.1.continuous_on,
    have C : continuous_on (Œªp : M √ó F, (‚ü®I (i.1 p.1), p.2‚ü© : E √ó F))
             (i.1.source.prod univ),
    { apply continuous_on.prod _ continuous_snd.continuous_on,
      exact B.comp continuous_fst.continuous_on (prod_subset_preimage_fst _ _) },
    have C' : continuous_on (Œªp : M √ó F, (‚ü®I (i.1 p.1), p.2‚ü© : E √ó F))
              ((i.1.source ‚à© j.1.source).prod univ) :=
      continuous_on.mono C (prod_mono (inter_subset_left _ _) (subset.refl _)),
    have D : (i.1.source ‚à© j.1.source).prod univ ‚äÜ (Œª (p : M √ó F),
      (I (i.1 p.1), p.2)) ‚Åª¬π' ((I '' (i.1.symm.trans j.1).source).prod univ),
    { rintros ‚ü®x, v‚ü© hx,
      simp only with mfld_simps at hx,
      simp only [hx] with mfld_simps },
    convert continuous_on.comp A C' D,
    ext p,
    simp only with mfld_simps
  end }

@[simp, mfld_simps] lemma base_set (i : atlas H M) :
  Z.to_topological_fiber_bundle_core.base_set i = i.1.source := rfl

/-- Local chart for the total space of a basic smooth bundle -/
def chart {e : local_homeomorph M H} (he : e ‚àà atlas H M) :
  local_homeomorph (Z.to_topological_fiber_bundle_core.total_space) (H √ó F) :=
(Z.to_topological_fiber_bundle_core.local_triv ‚ü®e, he‚ü©).trans
  (local_homeomorph.prod e (local_homeomorph.refl F))

@[simp, mfld_simps] lemma chart_source (e : local_homeomorph M H) (he : e ‚àà atlas H M) :
  (Z.chart he).source = Z.to_topological_fiber_bundle_core.proj ‚Åª¬π' e.source :=
by { ext p, simp only [chart, mem_prod, and_self] with mfld_simps }

@[simp, mfld_simps] lemma chart_target (e : local_homeomorph M H) (he : e ‚àà atlas H M) :
  (Z.chart he).target = e.target.prod univ :=
begin
  simp only [chart] with mfld_simps,
  ext p,
  split;
  simp {contextual := tt}
end

/-- The total space of a basic smooth bundle is endowed with a charted space structure, where the
charts are in bijection with the charts of the basis. -/
instance to_charted_space : charted_space (H √ó F) Z.to_topological_fiber_bundle_core.total_space :=
{ atlas := ‚ãÉ(e : local_homeomorph M H) (he : e ‚àà atlas H M), {Z.chart he},
  chart_at := Œªp, Z.chart (chart_mem_atlas H p.1),
  mem_chart_source := Œªp, by simp [mem_chart_source],
  chart_mem_atlas := Œªp, begin
    simp only [mem_Union, mem_singleton_iff, chart_mem_atlas],
    exact ‚ü®chart_at H p.1, chart_mem_atlas H p.1, rfl‚ü©
  end }

lemma mem_atlas_iff (f : local_homeomorph Z.to_topological_fiber_bundle_core.total_space (H √ó F)) :
  f ‚àà atlas (H √ó F) Z.to_topological_fiber_bundle_core.total_space ‚Üî
  ‚àÉ(e : local_homeomorph M H) (he : e ‚àà atlas H M), f = Z.chart he :=
by simp only [atlas, mem_Union, mem_singleton_iff]

@[simp, mfld_simps] lemma mem_chart_source_iff (p q : Z.to_topological_fiber_bundle_core.total_space) :
  p ‚àà (chart_at (H √ó F) q).source ‚Üî p.1 ‚àà (chart_at H q.1).source :=
by simp only [chart_at] with mfld_simps

@[simp, mfld_simps] lemma mem_chart_target_iff (p : H √ó F) (q : Z.to_topological_fiber_bundle_core.total_space) :
  p ‚àà (chart_at (H √ó F) q).target ‚Üî p.1 ‚àà (chart_at H q.1).target :=
by simp only [chart_at] with mfld_simps

@[simp, mfld_simps] lemma coe_chart_at_fst (p q : Z.to_topological_fiber_bundle_core.total_space) :
  (((chart_at (H √ó F) q) : _ ‚Üí H √ó F) p).1 = (chart_at H q.1 : _ ‚Üí H) p.1 := rfl

@[simp, mfld_simps] lemma coe_chart_at_symm_fst (p : H √ó F) (q : Z.to_topological_fiber_bundle_core.total_space) :
  (((chart_at (H √ó F) q).symm : H √ó F ‚Üí Z.to_topological_fiber_bundle_core.total_space) p).1
  = ((chart_at H q.1).symm : H ‚Üí M) p.1 := rfl

/-- Smooth manifold structure on the total space of a basic smooth bundle -/
instance to_smooth_manifold :
  smooth_manifold_with_corners (I.prod (model_with_corners_self ùïú F))
  Z.to_topological_fiber_bundle_core.total_space :=
begin
  /- We have to check that the charts belong to the smooth groupoid, i.e., they are smooth on their
  source, and their inverses are smooth on the target. Since both objects are of the same kind, it
  suffices to prove the first statement in A below, and then glue back the pieces at the end. -/
  let J := model_with_corners.to_local_equiv (I.prod (model_with_corners_self ùïú F)),
  have A : ‚àÄ (e e' : local_homeomorph M H) (he : e ‚àà atlas H M) (he' : e' ‚àà atlas H M),
    times_cont_diff_on ùïú ‚ä§
    (J ‚àò ((Z.chart he).symm.trans (Z.chart he')) ‚àò J.symm)
    (J.symm ‚Åª¬π' ((Z.chart he).symm.trans (Z.chart he')).source ‚à© range J),
  { assume e e' he he',
    have : J.symm ‚Åª¬π' ((chart Z he).symm.trans (chart Z he')).source ‚à© range J =
      (I.symm ‚Åª¬π' (e.symm.trans e').source ‚à© range I).prod univ,
    { have : range (Œª (p : H √ó F), (I (p.fst), id p.snd)) =
             (range I).prod (range (id : F ‚Üí F)) := prod_range_range_eq.symm,
      simp only [id.def, range_id] with mfld_simps at this,
      ext p,
      simp only [J, chart, model_with_corners.prod, this] with mfld_simps,
      split,
      { tauto },
      { exact Œª‚ü®‚ü®hx1, hx2‚ü©, hx3‚ü©, ‚ü®‚ü®‚ü®hx1, e.map_target hx1‚ü©, hx2‚ü©, hx3‚ü© } },
    rw this,
    -- check separately that the two components of the coordinate change are smooth
    apply times_cont_diff_on.prod,
    show times_cont_diff_on ùïú ‚ä§ (Œª (p : E √ó F), (I ‚àò e' ‚àò e.symm ‚àò I.symm) p.1)
         ((I.symm ‚Åª¬π' (e.symm.trans e').source ‚à© range I).prod (univ : set F)),
    { -- the coordinate change on the base is just a coordinate change for `M`, smooth since
      -- `M` is smooth
      have A : times_cont_diff_on ùïú ‚ä§ (I ‚àò (e.symm.trans e') ‚àò I.symm)
        (I.symm ‚Åª¬π' (e.symm.trans e').source ‚à© range I) :=
      (has_groupoid.compatible (times_cont_diff_groupoid ‚ä§ I) he he').1,
      have B : times_cont_diff_on ùïú ‚ä§ (Œªp : E √ó F, p.1)
        ((I.symm ‚Åª¬π' (e.symm.trans e').source ‚à© range I).prod univ) :=
      times_cont_diff_fst.times_cont_diff_on,
      exact times_cont_diff_on.comp A B (prod_subset_preimage_fst _ _) },
    show times_cont_diff_on ùïú ‚ä§ (Œª (p : E √ó F),
      Z.coord_change ‚ü®chart_at H (e.symm (I.symm p.1)), _‚ü© ‚ü®e', he'‚ü©
         ((chart_at H (e.symm (I.symm p.1)) : M ‚Üí H) (e.symm (I.symm p.1)))
      (Z.coord_change ‚ü®e, he‚ü© ‚ü®chart_at H (e.symm (I.symm p.1)), _‚ü©
        (e (e.symm (I.symm p.1))) p.2))
      ((I.symm ‚Åª¬π' (e.symm.trans e').source ‚à© range I).prod (univ : set F)),
    { /- The coordinate change in the fiber is more complicated as its definition involves the
      reference chart chosen at each point. However, it appears with its inverse, so using the
      cocycle property one can get rid of it, and then conclude using the smoothness of the
      cocycle as given in the definition of basic smooth bundles. -/
      have := Z.coord_change_smooth ‚ü®e, he‚ü© ‚ü®e', he'‚ü©,
      rw model_with_corners.image at this,
      apply times_cont_diff_on.congr this,
      rintros ‚ü®x, v‚ü© hx,
      simp only with mfld_simps at hx,
      let f := chart_at H (e.symm (I.symm x)),
      have A : I.symm x ‚àà ((e.symm.trans f).trans (f.symm.trans e')).source,
        by simp only [hx.1.1, hx.1.2] with mfld_simps,
      rw e.right_inv hx.1.1,
      have := Z.coord_change_comp ‚ü®e, he‚ü© ‚ü®f, chart_mem_atlas _ _‚ü© ‚ü®e', he'‚ü© (I.symm x) A v,
      simpa only [] using this } },
  haveI : has_groupoid Z.to_topological_fiber_bundle_core.total_space
         (times_cont_diff_groupoid ‚ä§ (I.prod (model_with_corners_self ùïú F))) :=
  begin
    split,
    assume e‚ÇÄ e‚ÇÄ' he‚ÇÄ he‚ÇÄ',
    rcases (Z.mem_atlas_iff _).1 he‚ÇÄ with ‚ü®e, he, rfl‚ü©,
    rcases (Z.mem_atlas_iff _).1 he‚ÇÄ' with ‚ü®e', he', rfl‚ü©,
    rw [times_cont_diff_groupoid, mem_groupoid_of_pregroupoid],
    exact ‚ü®A e e' he he', A e' e he' he‚ü©
  end,
  constructor
end

end basic_smooth_bundle_core

