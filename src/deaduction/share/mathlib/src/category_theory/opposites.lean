{ preimage := Œª X Y f, (F.preimage f.unop).op }

instance {F : C ‚•§ D} [faithful F] : faithful F.op :=
{ map_injective' := Œª X Y f g h,
    has_hom.hom.unop_inj $ by simpa using map_injective F (has_hom.hom.op_inj h) }

