def stalk (‚Ñ± : X.presheaf C) (x : X) : C :=
(stalk_functor C x).obj ‚Ñ± -- -- colimit (nbhds_inclusion x ‚ãô ‚Ñ±)

@[simp] lemma stalk_functor_obj (‚Ñ± : X.presheaf C) (x : X) : (stalk_functor C x).obj ‚Ñ± = ‚Ñ±.stalk x := rfl

