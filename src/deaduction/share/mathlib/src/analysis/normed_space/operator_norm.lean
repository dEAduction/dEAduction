  by_cases N0 : 0 ‚â§ N,
  { refine op_norm_le_bound œà _ (is_closed_property h_dense (is_closed_le _ _) _),
    { exact mul_nonneg N0 (norm_nonneg _) },
    { exact continuous_norm.comp (cont œà) },
